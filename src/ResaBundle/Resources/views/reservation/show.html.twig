{% extends 'ResaBundle::base.html.twig' %}
{% form_theme delete_form 'bootstrap_3_layout.html.twig' %}
{% block menu %}
    <a class="navbar-brand" href="{{ path('hotel_index') }}">Les hôtels</a>
    <a class="navbar-brand" href="{{ path('reservation_index') }}">Les réservations</a>
{% endblock %}
{% block body %}
    <h1>Reservation n°{{ reservation.idreservation }}</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Hôtel</th>
                <td><a href="{{ path('hotel_show', {'id' : reservation.id.idHotel.id}) }}">{{ reservation.id.idHotel.ville }}</a></td>
            </tr>
            <tr>
                <th>Chambre réservée</th>
                <td><a href="{{ path('chambre_show', {'id' : reservation.id.id}) }}">{{ reservation.id.numchambre }}</a></td>
            </tr>

            <tr>
                <th>Datearrivee</th>
                <td>{% if reservation.datearrivee %}{{ reservation.datearrivee|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datedepart</th>
                <td>{% if reservation.datedepart %}{{ reservation.datedepart|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ reservation.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ reservation.prenom }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}" class="btn btn-primary">Retourner à la liste</a>
    {{ form_start(delete_form) }}
    <input type="submit" value="Supprimer la réservation" class="btn btn-danger" style="margin-top: 10px;">
    {{ form_end(delete_form) }}
{% endblock %}
