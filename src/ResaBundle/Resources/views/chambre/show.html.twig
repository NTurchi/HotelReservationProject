{% extends 'ResaBundle::base.html.twig' %}
{% form_theme delete_form 'bootstrap_3_layout.html.twig' %}
{% block menu %}
    <a class="navbar-brand" href="{{ path('hotel_index') }}">Les hôtels</a>
    <a class="navbar-brand" href="{{ path('reservation_index') }}">Les réservations</a>
{% endblock %}

{% block body %}
    <h1>Chambre</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Numchambre</th>
                <th>Places</th>
                <th>Reservee</th>
                <th>Clim</th>
                <th>Tv</th>
                <th>Internet</th>
                <th>Animaux</th>
            </tr>
            <tr>
                <td>{{ chambre.numchambre }}</td>

                <td>{{ chambre.places }}</td>

               {% if chambre.reservee %}<td class="success"></td>{% else %}<td class="danger"></td>{% endif %}
               {% if chambre.clim %}<td class="success"></td>{% else %}<td class="danger"></td>{% endif %}

                {% if chambre.tv %}<td class="success"></td>{% else %}<td class="danger"></td>{% endif %}

                {% if chambre.internet %}<td class="success"></td>{% else %}<td class="danger"></td>{% endif %}

                {% if chambre.animaux %}<td class="success"></td>{% else %}<td class="danger"></td>{% endif %}
            </tr>
        </tbody>
    </table>

            <a href="{{ path('hotel_index') }}" class="btn btn-primary">Liste de hôtels</a>
            <a href="{{ path('chambre_edit', { 'id': chambre.id }) }}" class="btn btn-warning">Modifier</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger" style="margin-top: 10px;">
            {{ form_end(delete_form) }}
{% endblock %}
