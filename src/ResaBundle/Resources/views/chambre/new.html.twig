{% extends 'ResaBundle::base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block menu %}
    <a class="navbar-brand" href="{{ path('hotel_index') }}">Les hôtels</a>
    <a class="navbar-brand" href="{{ path('reservation_index') }}">Les réservations</a>
{% endblock %}

{% block body %}
    <h1>Ajout de la chambre à l'hôtel {{ chambre.idHotel.ville }}</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input class="btn btn-success" type="submit" value="Créer" />
    {{ form_end(form) }}

    <a class="btn btn-primary" href="{{ path('hotel_show', {'id': chambre.idHotel.id}) }}" style="margin-top: 10px;">Retourner à l'hotel</a>
{% endblock %}